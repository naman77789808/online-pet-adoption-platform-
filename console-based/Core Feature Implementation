import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

class User {
    private String username;
    private String email;
    private List<String> adoptedPets;

    public User(String username, String email) {
        this.username = username;
        this.email = email;
        this.adoptedPets = new ArrayList<>();
    }

    public void adoptPet(String pet) {
        adoptedPets.add(pet);
    }

    public void displayProfile() {
        System.out.println("User Profile:");
        System.out.println("Username: " + username);
        System.out.println("Email: " + email);
        System.out.println("Adopted Pets: " + adoptedPets);
    }

    public String getUsername() {
        return username;
    }

    public String getEmail() {
        return email;
    }
}

class PetAdoptionSystem {
    private List<User> users;
    private List<String> availablePets;

    public PetAdoptionSystem() {
        users = new ArrayList<>();
        availablePets = new ArrayList<>();
        availablePets.add("Dog");
        availablePets.add("Cat");
        availablePets.add("Rabbit");
    }

    public void registerUser(String username, String email) {
        users.add(new User(username, email));
        System.out.println("User registered successfully!");
    }

    public User getUser(String username) {
        for (User user : users) {
            if (user.getUsername().equals(username)) {
                return user;
            }
        }
        return null;
    }

    public void displayAvailablePets() {
        System.out.println("Available Pets for Adoption:");
        for (String pet : availablePets) {
            System.out.println("- " + pet);
        }
    }

    public void adoptPet(User user, String pet) {
        if (availablePets.contains(pet)) {
            user.adoptPet(pet);
            availablePets.remove(pet);
            System.out.println("You have successfully adopted a " + pet + "!");
        } else {
            System.out.println("Sorry, this pet is no longer available.");
        }
    }
}

public class PetAdoptionApp {
    private static Scanner scanner = new Scanner(System.in);
    private static PetAdoptionSystem system = new PetAdoptionSystem();

    public static void main(String[] args) {
        while (true) {
            System.out.println("\nWelcome to the Pet Adoption System");
            System.out.println("1. Register User");
            System.out.println("2. View Available Pets");
            System.out.println("3. Adopt Pet");
            System.out.println("4. View Profile");
            System.out.println("5. Exit");

            String choice = scanner.nextLine();

            switch (choice) {
                case "1":
                    registerUser();
                    break;
                case "2":
                    system.displayAvailablePets();
                    break;
                case "3":
                    adoptPet();
                    break;
                case "4":
                    viewProfile();
                    break;
                case "5":
                    System.out.println("Thank you for using the Pet Adoption System!");
                    return;
                default:
                    System.out.println("Invalid choice. Please try again.");
            }
        }
    }

    private static void registerUser() {
        System.out.println("Enter username: ");
        String username = scanner.nextLine();
        System.out.println("Enter email: ");
        String email = scanner.nextLine();
        system.registerUser(username, email);
    }

    private static void adoptPet() {
        System.out.println("Enter your username: ");
        String username = scanner.nextLine();
        User user = system.getUser(username);
        if (user != null) {
            system.displayAvailablePets();
            System.out.println("Enter the pet you want to adopt: ");
            String pet = scanner.nextLine();
            system.adoptPet(user, pet);
        } else {
            System.out.println("User not found.");
        }
    }

    private static void viewProfile() {
        System.out.println("Enter your username: ");
        String username = scanner.nextLine();
        User user = system.getUser(username);
        if (user != null) {
            user.displayProfile();
        } else {
            System.out.println("User not found.");
        }
    }
}
