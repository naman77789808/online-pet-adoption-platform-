import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.control.*;
import javafx.scene.layout.VBox;
import javafx.stage.Stage;
import javafx.scene.paint.Color;

public class PetAdoptionForm extends Application {

    @Override
    public void start(Stage primaryStage) {
        Label usernameLabel = new Label("Username:");
        TextField usernameField = new TextField();
        
        Label emailLabel = new Label("Email:");
        TextField emailField = new TextField();
        
        Button submitButton = new Button("Submit");
        Label validationLabel = new Label();
        
        // Adding validation logic
        submitButton.setOnAction(event -> {
            validationLabel.setText("");
            
            String username = usernameField.getText();
            String email = emailField.getText();
            
            // Validate username (non-empty)
            if (username.isEmpty()) {
                validationLabel.setTextFill(Color.RED);
                validationLabel.setText("Username cannot be empty");
                return;
            }
            
            // Validate email format
            if (!email.matches("^[A-Za-z0-9+_.-]+@(.+)$")) {
                validationLabel.setTextFill(Color.RED);
                validationLabel.setText("Invalid email format");
                return;
            }
            
            // Successful submission
            validationLabel.setTextFill(Color.GREEN);
            validationLabel.setText("Form submitted successfully!");
        });

        VBox vbox = new VBox(10, usernameLabel, usernameField, emailLabel, emailField, submitButton, validationLabel);
        Scene scene = new Scene(vbox, 300, 200);
        
        primaryStage.setTitle("Pet Adoption Form");
        primaryStage.setScene(scene);
        primaryStage.show();
    }

    public static void main(String[] args) {
        launch(args);
    }
}
